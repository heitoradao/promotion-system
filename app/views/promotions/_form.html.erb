
<%= form_with model: promotion do |f| %>
  <div class="form-group">
    <%= f.label :name, 'Nome' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description, 'Descrição' %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :code, 'Código' %>
    <%= f.text_field :code, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :discount_rate, 'Desconto' %>
    <%= f.number_field :discount_rate, in: 0..100, step: 0.1, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :coupon_quantity, 'Quantidade de cupons' %>
    <%= f.number_field :coupon_quantity, min: 1, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :expiration_date, 'Data de término' %>
    <%= f.text_field :expiration_date, class: 'form-control'  %>
  </div>
  <%= f.submit 'Criar promoção' %>
<% end %>