<% @promotions.each do |promotion| %>
  <h3><%= promotion.name %></h3>
  <dl>
    <dt>Descrição</dt>
    <dd><%= promotion.description %></dd>
    <dt>Desconto <small>em porcentagem</small></dt>
    <dd><%= number_to_percentage promotion.discount_rate, separator: ',', precision: 2 %></dd>
  </dl>
<% end %>
